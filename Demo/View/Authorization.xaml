<Window x:Class="Demo.View.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo.View"
        mc:Ignorable="d"
        Title="Authorization" Height="400" Width="300" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <Label Content="Логин" FontFamily="Comic Sans MS"></Label>
            <TextBox FontFamily="Comic Sans MS" Name="tbLogin"></TextBox>
            <Label Content="Пароль" FontFamily="Comic Sans MS"></Label>
            <PasswordBox Name="tbPassword" FontFamily="Comic Sans MS"></PasswordBox>

            <StackPanel Name="spCapthca" Visibility="Visible">
                <Canvas Name="canvas" Height="60" ></Canvas>
                <TextBox Name="tbCaptcha" FontFamily="Comic Sans MS"></TextBox>
            </StackPanel>

            <Button Click="OnSingIn" Content="Войти" FontFamily="Comic Sans MS"></Button>
        </StackPanel>
    </Grid>
</Window>
